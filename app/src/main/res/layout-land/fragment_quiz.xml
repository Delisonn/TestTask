<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:theme="@style/DefaultThemeTextView"
>

	<ImageView
			android:id="@+id/go_back_image_view"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:src="@drawable/back_arrow"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_margin="25dp"
	/>

	<com.google.android.material.textview.MaterialTextView
			android:id="@+id/quiz_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="QUIZ"
			android:textSize="20sp"
			android:textAlignment="center"
			android:maxLines="3"
			android:singleLine="false"
			android:ellipsize="end"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/go_back_image_view"
			android:layout_marginStart="25dp"
			android:layout_marginEnd="25dp"
			android:visibility="gone"
	/>



	<LinearLayout
			android:id="@+id/main_quiz_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:visibility="gone"
	>

		<LinearLayout
				android:id="@+id/quiz_container_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginStart="25dp"
				android:layout_marginEnd="25dp"
				android:background="@drawable/background_answer"
				android:padding="5dp"
				android:layout_marginTop="10dp"

		>
			<TextView
					android:id="@+id/count_quiz_text_view_1"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:background="@drawable/shape_rounded_variants"
					android:text="1"
					android:textSize="16sp"
					android:gravity="center"
			/>

			<TextView
					android:id="@+id/answer_text_view_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="Answer"
					android:textSize="16sp"
			/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/quiz_container_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginStart="25dp"
				android:layout_marginEnd="25dp"
				android:background="@drawable/background_answer"
				android:padding="5dp"
				android:layout_marginTop="10dp"

		>
			<TextView
					android:id="@+id/count_quiz_text_view_2"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:background="@drawable/shape_rounded_variants"
					android:text="1"
					android:textSize="16sp"
					android:gravity="center"
			/>

			<TextView
					android:id="@+id/answer_text_view_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="Answer"
					android:textSize="16sp"
			/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/quiz_container_3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginStart="25dp"
				android:layout_marginEnd="25dp"
				android:background="@drawable/background_answer"
				android:padding="5dp"
				android:layout_marginTop="10dp"

		>
			<TextView
					android:id="@+id/count_quiz_text_view_3"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:background="@drawable/shape_rounded_variants"
					android:text="1"
					android:textSize="16sp"
					android:gravity="center"
			/>

			<TextView
					android:id="@+id/answer_text_view_3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="Answer"
					android:textSize="16sp"
			/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/quiz_container_4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginStart="25dp"
				android:layout_marginEnd="25dp"
				android:background="@drawable/background_answer"
				android:padding="5dp"
				android:layout_marginTop="10dp"

		>
			<TextView
					android:id="@+id/count_quiz_text_view_4"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:background="@drawable/shape_rounded_variants"
					android:text="1"
					android:textSize="16sp"
					android:gravity="center"
			/>

			<TextView
					android:id="@+id/answer_text_view_4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="Answer"
					android:textSize="16sp"
			/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/quiz_container_5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginStart="25dp"
				android:layout_marginEnd="25dp"
				android:background="@drawable/background_answer"
				android:padding="5dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="15dp"
		>
			<TextView
					android:id="@+id/count_quiz_text_view_5"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:background="@drawable/shape_rounded_variants"
					android:text="1"
					android:textSize="16sp"
					android:gravity="center"
			/>

			<TextView
					android:id="@+id/answer_text_view_5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="Answer"
					android:textSize="16sp"
			/>

		</LinearLayout>

	</LinearLayout>


	<ProgressBar
			android:id="@+id/progress_bar"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:indeterminateTint="@color/black"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
	/>

	<LinearLayout
			android:id="@+id/layout_no_internet_connection"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="parent"
			android:orientation="vertical"
			android:background="@color/black"
			android:visibility="gone"
	>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Check your internet connection"
				android:padding="25dp"
				android:textColor="@color/white"
				android:layout_gravity="center"
		/>

	</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>