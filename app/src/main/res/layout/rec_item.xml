<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		xmlns:app="http://schemas.android.com/apk/res-auto"
>

	<com.google.android.material.textview.MaterialTextView
			android:id="@+id/question_text_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Question"
			android:textAlignment="center"
			android:textSize="20sp"
			android:layout_margin="25dp"
			android:maxLines="3"
			android:singleLine="false"
			android:ellipsize="end"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
	/>

	<LinearLayout
			android:id="@+id/main_quiz_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
	>

		<LinearLayout
				android:id="@+id/quiz_container_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_margin="10dp"
				android:background="@drawable/background_answer"
				android:padding="10dp"


		>
			<TextView
					android:id="@+id/count_quiz_text_view_1"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="@drawable/shape_rounded_variants"
					android:text="1"
					android:textSize="20sp"
					android:gravity="center"
			/>

			<TextView
					android:id="@+id/answer_text_view_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="Answer"
					android:textSize="18sp"
			/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/quiz_container_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_margin="10dp"
				android:background="@drawable/background_answer"
				android:padding="10dp"

		>
			<TextView
					android:id="@+id/count_quiz_text_view_2"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="@drawable/shape_rounded_variants"
					android:text="1"
					android:textSize="20sp"
					android:gravity="center"
			/>

			<TextView
					android:id="@+id/answer_text_view_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="Answer"
					android:textSize="18sp"
			/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/quiz_container_3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_margin="10dp"
				android:background="@drawable/background_answer"
				android:padding="10dp"

		>
			<TextView
					android:id="@+id/count_quiz_text_view_3"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="@drawable/shape_rounded_variants"
					android:text="1"
					android:textSize="20sp"
					android:gravity="center"
			/>

			<TextView
					android:id="@+id/answer_text_view_3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="Answer"
					android:textSize="18sp"
			/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/quiz_container_4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_margin="10dp"
				android:background="@drawable/background_answer"
				android:padding="10dp"

		>
			<TextView
					android:id="@+id/count_quiz_text_view_4"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="@drawable/shape_rounded_variants"
					android:text="1"
					android:textSize="20sp"
					android:gravity="center"
			/>

			<TextView
					android:id="@+id/answer_text_view_4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="Answer"
					android:textSize="18sp"
			/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/quiz_container_5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_margin="10dp"
				android:background="@drawable/background_answer"
				android:padding="10dp"

		>
			<TextView
					android:id="@+id/count_quiz_text_view_5"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="@drawable/shape_rounded_variants"
					android:text="1"
					android:textSize="20sp"
					android:gravity="center"
			/>

			<TextView
					android:id="@+id/answer_text_view_5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="Answer"
					android:textSize="18sp"
			/>

		</LinearLayout>

	</LinearLayout>
</LinearLayout>